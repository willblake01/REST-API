<div class='container'>

  <div class='header'>
    <h1>RESTful CMS</h1>
  </div>

  <div class='submit-todo'>
    <h5>Add a new Todo</h5>
    <div>
      <form class='input' action='/api/new' method='POST'>
        <input type='search' name='title' class='form-control rounded-0 py-2' id='user-input'>
        <button type='submit' id='add-btn' class='btn btn-,lg btn-default'>ADD</button>
      </form>
    </div>
  </div>

  <div class='status-columns'>
    <div class='column-titles'>
      <h2>To Dos</h2>
    </div>
    <ul id='todos'>
      {{#each items}}
        <li>{{title}}
          <select>
            <option selected="selected">Action</option>
            <option type='submit' action='/api/edit/:id' method='PUT'>Edit</option>
            <option type='submit' action='/api/delete/:id' method='DELETE'>Delete</option>
            <option type='submit'>In Progress</option>
            <option type='submit'>Complete</option>
          </select>
        </li>
      {{/each}}
    </ul>
  </div>

  <div class='in-progress'>
    <div class='column-titles'>
      <h2>In Progress</h2>
    </div>
    <ul></ul>
  </div>

  <div class='completed'>
    <div class='column-titles'>
      <h2>Completed</h2>
    </div>
    <ul></ul>
  </div>

</div>
